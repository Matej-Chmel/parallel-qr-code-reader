{
	"version": "2.0.0",
	"inputs": [
		{
			"id": "test",
			"default": "",
			"description": "Choose test.",
			"options": [
				"all tests",
				"base algorithm",
				"create solution",
				"geometry",
				"get screen size",
				"list image paths",
				"os",
				"show image",
				"stroke qr codes",
				"test static property"
			],
			"type": "pickString"
		}
	],
	"tasks": [
		{
			"label": "Install",
			"linux": {
				"command": "python",
				"args": [
					"-m",
					"pip",
					"install",
					"-r",
					"requirements_common.txt",
					"-r",
					"requirements_linux.txt",
					"--user"
				]
			},
			"osx": {
				"command": "python",
				"args": [
					"-m",
					"pip",
					"install",
					"-r",
					"requirements_common.txt",
					"-r",
					"requirements_osx.txt",
					"--user"
				]
			},
			"windows": {
				"command": "py",
				"args": [
					"-m",
					"pip",
					"install",
					"-r",
					"requirements_common.txt",
					"-r",
					"requirements_windows.txt",
					"--user"
				]
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/source/install"
			},
			"problemMatcher": [],
			"type": "shell"
		},
		{
			"label": "Run",
			"linux": {
				"command": "python"
			},
			"osx": {
				"command": "python"
			},
			"windows": {
				"command": "py"
			},
			"args": [
				"-m",
				"mchqr.test",
				"${input:test}"
			],
			"options": {
				"cwd": "${workspaceFolder}/source"
			},
			"problemMatcher": [],
			"type": "shell"
		},
		{
			"label": "Install & Run",
			"dependsOn": [
				"Install",
				"Run"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		}
	]
}
